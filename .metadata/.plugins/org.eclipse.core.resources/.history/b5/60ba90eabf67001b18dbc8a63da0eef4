 * @param  methods execute ProductorsDTO
 * @return ProductorsDTO
 */
public class SaveProducts {
	
	private final RepositoryProductors repositoryProductors;

	public SaveProducts(RepositoryProductors repositoryProductors) {
		this.repositoryProductors = repositoryProductors;
	}
	
	public void execute ( ProductorsDTO ProductorsDTO ) {
		ProductorsEntity ProductorsEntity = new builderProductors()
										   .withCPFName(customerDTO.getCpf(), customerDTO.getName())
										   .addressComplete(customerDTO.getStreet(), 
												   			customerDTO.getNumber(), 
												   			customerDTO.getDistrict(),
												   			customerDTO.getCity(),
												   			customerDTO.getState(),
												   			customerDTO.getZipCode())
										   .create();
		
		repositoryProductors.insertProductors(customersEntity);(customersEntity);
		
	}

}
