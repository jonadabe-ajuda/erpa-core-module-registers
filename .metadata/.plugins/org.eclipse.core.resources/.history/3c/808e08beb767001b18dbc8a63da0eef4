package br.com.erpa.domain.repository;

import java.util.List;

import br.com.erpa.domain.entity.ProductsEntity;

/**
 * Repository from Customer 
 *  
 * @author jonadabe
 * @param  methods insertCustomer CustomersEntity
 * @param  methods updateCustomer CustomersEntity
 * @param  methods deleteCustomer CustomersEntity
 * @param  methods listaAllCustomers CustomersEntity
 * @return findByCustomer CustomersEntity
 * @return listaAllCustomers list from CustomersEntity
 */
public interface RepositoryProducts {
	
	public void insertProducts(ProductsEntity customersEntity);
	public void updateProducts(ProductsEntity customersEntity);
	public void deleteProducts(ProductsEntity customersEntity);
	public ProductsEntity findByProducts(String cpf);
	public List<ProductsEntity> listaAllProducts();	

}
